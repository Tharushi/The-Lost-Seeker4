<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/android">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="Welcome Admin"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/ImageView03"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/logout" />

    <Button
        android:id="@+id/btnlogout"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/ImageView03"
        android:layout_toLeftOf="@+id/ImageView03"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="16dp"
        android:src="@drawable/notify" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:src="@drawable/viewwfound" />

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ImageView01"
        android:src="@drawable/viewwlost" />

    <Button
        android:id="@+id/btnlost"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/ImageView02"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:text="View Lost Items" />

    <Button
        android:id="@+id/btnviewall"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/ImageView04"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:text="View All Items" />

    <ImageView
        android:id="@+id/ImageView04"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_above="@+id/btnlogout"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="19dp"
        android:src="@drawable/viewlost" />

    <Button
        android:id="@+id/btnfound"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ImageView01"
        android:layout_marginTop="21dp"
        android:text="View Found Items" />

    <Button
        android:id="@+id/btnclaims"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginTop="19dp"
        android:text="Claim Notifications" />

</RelativeLayout>
