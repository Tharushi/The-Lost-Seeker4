<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/android"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/register_error"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnregister"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnregister"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="17dp"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/adduser" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView1"
        android:text="Register to  The Lost Seeker"
        android:textColor="#000000"
        android:textSize="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/txtlocation"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:text="First Name"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtfname"
        android:text="Last Name"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtlname"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView5"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/txtfname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/txtlocation"
        android:layout_alignBottom="@+id/txtlocation"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="First Name"
        android:textColor="#000000"
        android:textSize="15dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtaddress"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/TextView02"
        android:ems="10"
        android:hint="Address"
        android:textColor="#000000"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/txtpword"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView5"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/txtuname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView5"
        android:ems="10"
        android:hint="Username"
        android:textColor="#000000"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/txttelephone"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/txtaddress"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Telephone No"
        android:inputType="phone"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView4"
        android:text="Username"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView01"
        android:text="Address"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView6"
        android:text="Telephone"
        android:textColor="#000000"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/txtlname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Last Name"
        android:textColor="#000000"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/txtemail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtlname"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="15dp" />

</RelativeLayout>